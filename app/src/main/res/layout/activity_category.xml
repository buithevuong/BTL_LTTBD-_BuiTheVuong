<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f7dc8b">
    <TextView
        android:id="@+id/txtCategoryBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#b86014"/>

    <TextView
        android:id="@+id/totalBookCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@color/teal_700"
        android:textAlignment="textEnd"
        app:layout_constraintTop_toBottomOf="@+id/txtCategoryBook"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listBookCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/totalBookCategory"
        tools:layout_editor_absoluteX="-16dp"
        android:layout_marginBottom="150dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>